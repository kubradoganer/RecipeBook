@model DataAccess.Entities.RecipeTag

@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <h4 class="card-header">Create Recipe Tag</h4>
    <div class="card-body">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RecipeId" class="control-label"></label>
                    <select disabled asp-for="RecipeId" class="form-control" asp-items="ViewBag.RecipeId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="TagId" class="control-label"></label>
                    <select asp-for="TagId" class="form-control" asp-items="ViewBag.TagId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" /> |
                    <a class="btn btn-secondary" asp-controller="Recipes" asp-action="Details" asp-route-id="@Model.Recipe.Id">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
