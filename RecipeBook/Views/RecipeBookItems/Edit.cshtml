@model DataAccess.Entities.RecipeBookItem

@{
    ViewData["Title"] = "Edit";
}
<div class="card">
    <h4 class="card-header">Edit Recipe Book Item</h4>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="RecipeBookId" class="control-label">RecipeBook</label>
                        <select disabled asp-for="RecipeBookId" class="form-control" asp-items="ViewBag.RecipeBookId"></select>
                        <span asp-validation-for="RecipeBookId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RecipeId" class="control-label"></label>
                        <select asp-for="RecipeId" class="form-control" asp-items="ViewBag.RecipeId"></select>
                        <span asp-validation-for="RecipeId" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" /> |
                        <a class="btn btn-secondary" asp-controller="RecipeBooks" asp-action="Details" asp-route-id="@Model.RecipeBook.Id">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
