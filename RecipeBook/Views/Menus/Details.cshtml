@model DataAccess.Entities.Menu

@{
    ViewData["Title"] = "Menu Details";
}

<div class="card">
    <h4 class="card-header">Menu Details </h4>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a class="btn btn-secondary btn-sm" asp-action="Index">Back to List</a>
    </div>
</div>
<div class="card mt-4">
    <h5 class="card-header">Menu Items</h5>
    <div class="card-body">
        <p>
            <a class="btn btn-primary btn-sm" asp-route="menuitemcreate" asp-route-menuid="@Model.Id">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Recipe
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MenuItems)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Recipe.Name)
                        </td>
                        <td>
                            <a class="btn btn-warning btn-sm" asp-route="menuitemedit" asp-route-menuid="@Model.Id" asp-route-id="@item.Id">Edit</a> |
                            <a class="btn btn-danger btn-sm" asp-route="menuitemdelete" asp-route-menuid="@Model.Id" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
