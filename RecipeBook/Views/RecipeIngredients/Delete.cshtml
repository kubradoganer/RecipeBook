@model DataAccess.Entities.RecipeIngredient

@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <h4 class="card-header">Are you sure you want to delete this ingredient?</h4>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Recipe)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Recipe.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IngredientType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IngredientType.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MeasurementType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MeasurementType.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Amount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Amount)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a class="btn btn-secondary" asp-controller="Recipes" asp-action="Details" asp-route-id="@Model.Recipe.Id">Back to List</a>
        </form>
    </div>
</div>
