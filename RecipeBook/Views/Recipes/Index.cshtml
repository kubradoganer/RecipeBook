@model IEnumerable<DataAccess.Entities.Recipe>

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <h4 class="card-header">Recipes</h4>
    <div class="card-body">
        <p>
            <a class="btn btn-primary btn-sm" asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RecipeType)
                    </th>
                    <th>
                        Ingredients
                    </th>
                    <th>
                        Tags
                    </th>
                    <th>
                        User
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RecipeType.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RecipeIngredients.Count) ingredient(s)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RecipeTags.Count) tag(s)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedUser.FullName)
                    </td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>